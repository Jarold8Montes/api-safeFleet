{
    "version": 2,
    "builds": [
        {
            "src": "/public/index.php",
            "use": "vercel-php@0.7.0"
        },
        {
            "src": "/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "public/build"
            }
        }
    ],
    "routes": [
        {
            "src": "/build/(.*)",
            "dest": "/public/build/$1"
        },
        { "src": "/(.*)", "dest": "/public/index.php" }
    ]
}